<?xml version="1.0" encoding="utf-8"?>

<resources>
  <attr name="colorBackgroundRow" format="color"/>
  <attr name="colorBackgroundRowHighlight" format="color"/>
  <attr name="snackBackgroundColor" format="color"/>
  <attr name="rowBackground" format="reference" />
  
  <style name="Theme2" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorAccent">@color/accentColor</item>
    <item name="android:textColorPrimary">@color/White</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="android:textColorSecondary">@color/textSecondaryColor</item>
    <item name="colorBackgroundRow">@color/rowBackgroundColorDark</item>
    <item name="colorBackgroundRowHighlight">@color/rowBackgroundColorDarkHighlight</item>
    <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    <item name="rowBackground">@drawable/row_background_dark</item>
  </style>

  <style name="Theme2Light" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorAccent">@color/accentColor</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="android:textColorPrimary">@color/Black</item>
    <item name="android:textColorSecondary">@color/textSecondaryColor</item>
    <item name="colorBackgroundRow">@color/rowBackgroundColor</item>
    <item name="colorBackgroundRowHighlight">@color/rowBackgroundColorHighlight</item>
    <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    <item name="rowBackground">@drawable/row_background</item>
  </style>

  <style name="LoginTheme">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorAccent">@color/accentColorDark</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="android:textColorPrimary">@color/White</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="android:textColorSecondary">@color/White</item>
  </style>
  
  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
  </style>
    
  <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="colorAccent">@color/accentColor</item>
  </style>

  <style name="Button">
    <item name="colorButtonNormal">@color/primaryColorDark</item>
    <item name="android:textColor">@color/White</item>
  </style>

  <style name="ButtonInverse">
    <item name="colorButtonNormal">@color/White</item>
    <item name="android:textColor">@color/primaryColorDark</item>
  </style>
  
  <style name="ImportantButton">
    <item name="colorButtonNormal">@color/accentColor</item>
    <item name="android:textColor">@color/White</item>
  </style>
      

  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#931db2</item>
    <item name="colorPrimaryDark">#3cba8b</item>->
    <item name="colorAccent">#111111</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>

</resources>
